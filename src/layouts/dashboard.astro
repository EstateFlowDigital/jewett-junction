---
import '../../generated/fonts.css';
import '../site-components/global.css';
import '../styles/global.css';
// DevLink global styles (Webflow components)
import '../../devlink/global.css';
import { AppShell } from '../components/layout/AppShell';
import { ThemeSwitcher } from '../components/ThemeSwitcher';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Jewett Junction', description = 'Internal Intranet' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <AppShell client:load currentPath={currentPath}>
      <slot />
    </AppShell>
    <ThemeSwitcher client:load />
  </body>
</html>
