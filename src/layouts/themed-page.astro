---
import '../../generated/fonts.css';
import '../../generated/webflow.css';
import '../site-components/global.css';
import '../styles/global.css';
import { MobileNav } from '../components/layout/MobileNav';

interface Props {
  title?: string;
  theme?: string;
  currentSection?: string;
}

const { title = 'Jewett Junction', currentSection = '' } = Astro.props;

// Map section to full path for MobileNav
const currentPath = currentSection ? `/jewett-junction/${currentSection}` : '/jewett-junction/dashboard';
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      .glass { background: rgba(30, 41, 59, 0.8); backdrop-filter: blur(12px); }
      @media (max-width: 767px) { .mobile-safe-area { padding-top: max(4.5rem, env(safe-area-inset-top, 0px)); } }
    </style>
  </head>
  <body class="bg-slate-950 text-gray-100 min-h-screen">
    <!-- Mobile Navigation -->
    <MobileNav client:load currentTheme="dark" currentPath={currentPath} />

    <!-- Background -->
    <div class="fixed inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 -z-10"></div>
    <div class="fixed top-0 left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl -z-10"></div>
    <div class="fixed bottom-0 right-1/4 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl -z-10"></div>

    <!-- Desktop Sidebar -->
    <aside class="fixed left-0 top-0 bottom-0 w-20 glass border-r border-slate-800/50 z-40 hidden md:flex flex-col items-center py-6">
      <a href="/jewett-junction" class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center text-white mb-8 shadow-lg shadow-blue-500/30">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
      </a>
      <nav class="flex-1 flex flex-col items-center gap-3">
        <a href="/jewett-junction/dashboard" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'dashboard' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Dashboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/></svg>
        </a>
        <a href="/jewett-junction/safety" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'safety' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Safety">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        </a>
        <a href="/jewett-junction/hr" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'hr' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="HR">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
        </a>
        <a href="/jewett-junction/events" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'events' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Calendar">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        </a>
        <a href="/jewett-junction/careers" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'careers' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Careers">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
        </a>
        <a href="/jewett-junction/directory" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'directory' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Directory">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </a>
        <a href="/jewett-junction/submit-idea" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'submit-idea' ? 'bg-amber-500/20 border border-amber-500/30 text-amber-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Submit Idea">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/></svg>
        </a>
      </nav>
      <a href="/jewett-junction/help" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all ${currentSection === 'help' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Help">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
      </a>
      <a href="/jewett-junction/settings" class={`w-12 h-12 rounded-xl flex items-center justify-center transition-all mb-3 ${currentSection === 'settings' ? 'bg-blue-500/20 border border-blue-500/30 text-blue-400' : 'hover:bg-slate-800 text-slate-400 hover:text-slate-200'}`} title="Settings">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
      </a>
      <div class="w-12 h-12 bg-gradient-to-br from-slate-600 to-slate-700 rounded-full flex items-center justify-center text-sm font-medium border border-slate-600">JC</div>
    </aside>
    <main class="md:pl-20 min-h-screen">
      <div class="p-6 md:p-8 lg:p-10 mobile-safe-area md:pt-6">
        <slot />
      </div>
    </main>
  </body>
</html>
