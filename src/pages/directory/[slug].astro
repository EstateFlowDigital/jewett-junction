---
import ThemedPage from '../../layouts/themed-page.astro';
import { initCMS, getEmployeeBySlug, getEmployees } from '../../lib/webflow-cms';

export const prerender = false;

// Initialize CMS with Cloudflare runtime context
initCMS(Astro.locals);

const { slug } = Astro.params;

// Fetch the employee by slug
let employee: any = null;
let relatedEmployees: any[] = [];

try {
  if (slug) {
    employee = await getEmployeeBySlug(slug);

    // Also fetch other employees
    const result = await getEmployees({ limit: 4 });
    relatedEmployees = result.items.filter(e => e.slug !== slug).slice(0, 3);
  }
} catch (error) {
  console.error('Error fetching employee:', error);
}

// If employee not found, redirect
if (!employee) {
  return Astro.redirect('/jewett-junction/directory');
}

// Format date safely
const formatDate = (dateStr: string) => {
  if (!dateStr) return '';
  const date = new Date(dateStr);
  // Handle invalid dates
  if (isNaN(date.getTime())) return '';
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long'
  });
};
---

<ThemedPage title={`${employee.name} | Directory | Jewett Junction`} theme="dark" currentSection="directory">
  <div>
    <!-- Back link -->
    <a href="/jewett-junction/directory" class="inline-flex items-center gap-2 text-slate-400 hover:text-blue-400 mb-6 transition-colors min-h-[44px]" aria-label="Back to Directory">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to Directory
    </a>

    <!-- Employee Profile -->
    <div class="glass rounded-2xl p-8 mb-8 border border-slate-800/50">
      <div class="flex flex-col md:flex-row gap-8">
        <!-- Photo -->
        <div class="flex-shrink-0">
          {employee.photo?.url ? (
            <img
              src={employee.photo.url}
              alt={employee.photo.alt || employee.name}
              class="w-40 h-40 rounded-2xl object-cover"
            />
          ) : (
            <div class="w-40 h-40 bg-gradient-to-br from-blue-500 to-purple-500 rounded-2xl flex items-center justify-center">
              <span class="text-5xl font-bold text-white">
                {employee.name.split(' ').map((n: string) => n[0]).join('').slice(0, 2)}
              </span>
            </div>
          )}
        </div>

        <!-- Info -->
        <div class="flex-1">
          <div class="mb-4">
            {employee['is-featured'] && (
              <span class="inline-flex items-center gap-1 px-3 py-1 text-xs font-medium bg-amber-500/20 text-amber-400 rounded-full border border-amber-500/30 mb-3">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" />
                </svg>
                Featured Employee
              </span>
            )}
            <h1 class="text-3xl font-bold text-white mb-2">{employee.name}</h1>
            <p class="text-xl text-blue-400">{employee.role}</p>
          </div>

          <!-- Details Grid -->
          <div class="grid sm:grid-cols-2 gap-4 mb-6">
            <div class="flex items-center gap-3 text-slate-300">
              <div class="w-10 h-10 bg-purple-500/20 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-400">Department</p>
                <p class="font-medium">{employee.department}</p>
              </div>
            </div>

            {employee['start-date'] && (
              <div class="flex items-center gap-3 text-slate-300">
                <div class="w-10 h-10 bg-green-500/20 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <p class="text-sm text-slate-400">Joined</p>
                  <p class="font-medium">{formatDate(employee['start-date'])}</p>
                </div>
              </div>
            )}
          </div>

          <!-- Contact Info -->
          <div class="flex flex-wrap gap-3">
            {employee.email && (
              <a
                href={`mailto:${employee.email}`}
                class="inline-flex items-center gap-2 px-4 py-2 min-h-[44px] bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded-xl transition-colors"
                aria-label={`Send email to ${employee.email}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                {employee.email}
              </a>
            )}
            {employee.phone && (
              <a
                href={`tel:${employee.phone}`}
                class="inline-flex items-center gap-2 px-4 py-2 min-h-[44px] bg-green-500/20 hover:bg-green-500/30 text-green-400 rounded-xl transition-colors"
                aria-label={`Call ${employee.phone}`}
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                {employee.phone}
              </a>
            )}
          </div>
        </div>
      </div>

      <!-- Bio -->
      {employee.bio && (
        <div class="mt-8 pt-8 border-t border-slate-700/50">
          <h2 class="text-xl font-semibold text-white mb-4">About</h2>
          <p class="text-slate-300 leading-relaxed whitespace-pre-wrap">{employee.bio}</p>
        </div>
      )}
    </div>

    <!-- Related Employees -->
    {relatedEmployees.length > 0 && (
      <div class="glass rounded-2xl p-6 border border-slate-800/50">
        <h2 class="text-xl font-semibold text-white mb-4">Team Members</h2>
        <div class="grid sm:grid-cols-3 gap-4">
          {relatedEmployees.map((related) => (
            <a
              href={`/jewett-junction/directory/${related.slug}`}
              class="flex flex-col items-center p-4 min-h-[44px] rounded-xl hover:bg-slate-800/50 transition-colors group text-center"
              aria-label={`View profile of ${related.name}`}
            >
              {related.photo?.url ? (
                <img
                  src={related.photo.url}
                  alt=""
                  class="w-16 h-16 rounded-full object-cover mb-3"
                />
              ) : (
                <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center mb-3" aria-hidden="true">
                  <span class="text-lg font-bold text-white">
                    {related.name.split(' ').map((n: string) => n[0]).join('').slice(0, 2)}
                  </span>
                </div>
              )}
              <h3 class="font-medium text-white group-hover:text-blue-400 transition-colors">
                {related.name}
              </h3>
              <p class="text-sm text-slate-400">{related.role}</p>
            </a>
          ))}
        </div>
      </div>
    )}
  </div>
</ThemedPage>
