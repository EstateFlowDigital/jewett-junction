---
import '../../../../generated/fonts.css';
import '../../../../generated/webflow.css';
import '../../../site-components/global.css';
import '../../../styles/global.css';
import { ThemeSwitcher } from '../../../components/ThemeSwitcher';
import { MobileNav } from '../../../components/layout/MobileNav';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Patriotic Dashboard | Jewett Junction</title>
    <style>
      .card-hover:hover { transform: translateY(-2px); }
      @media (max-width: 767px) { .mobile-safe-area { padding-top: 4.5rem; } }
    </style>
  </head>
  <body class="bg-slate-50 min-h-screen">
    <MobileNav client:load currentTheme="patriotic" currentPath="/jewett-junction/dashboard" />
    <!-- Top Header -->
    <header class="bg-blue-950 h-16 fixed top-0 left-0 right-0 z-50">
      <div class="h-full flex items-center justify-between px-6">
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center shadow-lg">
              <svg class="w-6 h-6 text-blue-950" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
            </div>
            <div>
              <div class="font-bold text-white text-lg">Jewett Junction</div>
              <div class="text-xs text-blue-300">Building America Since 1972</div>
            </div>
          </div>
        </div>
        <nav class="hidden md:flex items-center gap-1">
          <a href="/jewett-junction/dashboard/patriotic" class="px-4 py-2 bg-white/10 text-white rounded-lg text-sm font-medium">Dashboard</a>
          <a href="/jewett-junction/safety/patriotic" class="px-4 py-2 text-blue-200 hover:bg-white/10 rounded-lg text-sm">Safety</a>
          <a href="/jewett-junction/hr/patriotic" class="px-4 py-2 text-blue-200 hover:bg-white/10 rounded-lg text-sm">HR</a>
          <a href="/jewett-junction/events/patriotic" class="px-4 py-2 text-blue-200 hover:bg-white/10 rounded-lg text-sm">Events</a>
          <a href="/jewett-junction/resources/patriotic" class="px-4 py-2 text-blue-200 hover:bg-white/10 rounded-lg text-sm">Resources</a>
        </nav>
        <div class="flex items-center gap-4">
          <!-- Safety Record Badge -->
          <div class="hidden md:flex items-center gap-2 bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-semibold shadow-lg shadow-red-600/30">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            247 Days Safe
          </div>
          <div class="w-10 h-10 bg-red-600 rounded-full flex items-center justify-center text-white font-bold shadow-lg shadow-red-600/30">JC</div>
        </div>
      </div>
    </header>

    <!-- Red Accent Bar -->
    <div class="fixed top-16 left-0 right-0 h-1 bg-gradient-to-r from-red-600 via-red-500 to-red-600 z-40"></div>

    <!-- Main -->
    <main class="pt-20 min-h-screen">
      <div class="p-6 md:p-8 lg:p-10 mobile-safe-area md:pt-6">
        <!-- Welcome Banner -->
        <div class="bg-blue-950 rounded-2xl p-8 text-white mb-8 relative overflow-hidden">
          <div class="absolute right-0 top-0 bottom-0 w-40 bg-red-600"></div>
          <div class="absolute right-36 top-0 bottom-0 w-4 bg-white"></div>
          <div class="relative z-10">
            <h1 class="text-2xl sm:text-3xl font-bold mb-2">Welcome to Jewett Junction</h1>
            <p class="text-blue-200 text-sm sm:text-base">Your central hub for company news, resources, and team updates.</p>
          </div>
        </div>

        <!-- Bento Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-12 gap-4 mb-8">
          <!-- Safety - Large Card -->
          <div class="col-span-12 md:col-span-5 bg-white rounded-2xl p-6 border-l-4 border-blue-950 shadow-sm card-hover transition-transform">
            <div class="flex items-start justify-between mb-4">
              <div class="w-14 h-14 bg-blue-950 rounded-xl flex items-center justify-center">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <span class="px-3 py-1 bg-blue-100 text-blue-900 text-xs font-semibold rounded-full">4EverSafe</span>
            </div>
            <div class="text-sm text-gray-500 mb-1">Days Without Incident</div>
            <div class="text-6xl font-bold text-blue-950 mb-2">247</div>
            <div class="flex items-center gap-2 text-sm text-blue-700">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
              Company record: 312 days
            </div>
          </div>

          <!-- Right Stats - Company-wide -->
          <div class="col-span-12 md:col-span-7 grid grid-cols-2 gap-4">
            <div class="bg-white rounded-2xl p-5 shadow-sm border-l-4 border-red-600 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-gray-500">Active Projects</span>
                <div class="w-10 h-10 bg-red-50 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-gray-900">42</div>
              <div class="text-sm text-gray-500 mt-1">Across all regions</div>
            </div>
            <div class="bg-white rounded-2xl p-5 shadow-sm border-l-4 border-blue-950 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-gray-500">Total Employees</span>
                <div class="w-10 h-10 bg-blue-50 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-950" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-blue-950">156</div>
              <div class="text-sm text-gray-500 mt-1">Building together</div>
            </div>
            <div class="bg-white rounded-2xl p-5 shadow-sm border-l-4 border-red-600 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-gray-500">Open Positions</span>
                <div class="w-10 h-10 bg-red-50 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-red-600">8</div>
              <div class="text-sm text-green-600 mt-1 flex items-center gap-1">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M5 15l7-7 7 7"/></svg>
                3 new this week
              </div>
            </div>
            <div class="bg-red-600 rounded-2xl p-5 text-white shadow-lg shadow-red-600/20 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-red-100">Referral Bonus</span>
                <div class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold">$500</div>
              <div class="text-sm text-red-100 mt-1">Per successful hire</div>
            </div>
          </div>
        </div>

        <!-- Featured Announcement Banner -->
        <div class="bg-gradient-to-r from-blue-950 via-blue-900 to-blue-950 border border-blue-800 rounded-2xl p-6 mb-8 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-full bg-red-600 opacity-80"></div>
          <div class="absolute top-0 right-28 w-2 h-full bg-white opacity-50"></div>
          <div class="relative z-10 flex items-start gap-5">
            <div class="w-14 h-14 bg-white/10 rounded-xl flex items-center justify-center flex-shrink-0">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/></svg>
            </div>
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <span class="px-2 py-1 bg-red-600 text-white text-xs font-semibold rounded-full">Featured</span>
                <span class="text-blue-300 text-sm">January 14, 2026</span>
              </div>
              <h3 class="text-lg sm:text-xl font-bold text-white mb-2">Q4 2025 Results: Record-Breaking Year!</h3>
              <p class="text-blue-200 text-xs sm:text-sm">We're proud to announce that Jewett Construction achieved record revenue in 2025, completing 48 major projects across all divisions. Thank you to every team member for your dedication!</p>
            </div>
            <button class="px-5 py-2.5 bg-white text-blue-950 rounded-xl text-sm font-semibold hover:bg-blue-50 transition-colors shadow-md flex-shrink-0">
              Read More
            </button>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mb-8">
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-4">Quick Links</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-3">
            <a href="/jewett-junction/safety/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-blue-950 transition-all group">
              <div class="w-12 h-12 bg-blue-950 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">Safety</span>
            </a>
            <a href="/jewett-junction/hr/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-red-600 transition-all group">
              <div class="w-12 h-12 bg-red-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">HR Resources</span>
            </a>
            <a href="/jewett-junction/it-helpdesk/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-blue-950 transition-all group">
              <div class="w-12 h-12 bg-blue-950 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">IT Help</span>
            </a>
            <a href="/jewett-junction/resources/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-red-600 transition-all group">
              <div class="w-12 h-12 bg-red-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">Training</span>
            </a>
            <a href="/jewett-junction/events/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-blue-950 transition-all group">
              <div class="w-12 h-12 bg-blue-950 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">Calendar</span>
            </a>
            <a href="/jewett-junction/careers/patriotic" class="flex flex-col items-center gap-2 p-4 bg-white rounded-xl border-2 border-transparent hover:border-red-600 transition-all group">
              <div class="w-12 h-12 bg-red-600 rounded-xl flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <span class="text-sm font-medium text-gray-700">Careers</span>
            </a>
          </div>
        </div>

        <!-- Three Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <!-- News & Updates -->
          <div class="lg:col-span-2 bg-white rounded-2xl shadow-sm overflow-hidden">
            <div class="p-5 border-b border-gray-100 flex items-center justify-between bg-blue-950 text-white">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-white/10 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
                </div>
                <h2 class="font-bold">News & Updates</h2>
              </div>
              <a href="/jewett-junction/resources/patriotic" class="text-sm text-blue-200 hover:text-white">View All</a>
            </div>
            <div class="divide-y divide-gray-50">
              <article class="p-5 hover:bg-gray-50 transition-colors">
                <div class="flex items-start gap-4">
                  <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-blue-950" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="px-2 py-0.5 bg-blue-100 text-blue-900 text-xs font-semibold rounded-full">Safety</span>
                      <span class="text-xs text-gray-400">Jan 13, 2026</span>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">New PPE Requirements for Q1 2026</h3>
                    <p class="text-sm text-gray-600">Updated safety gear requirements go into effect next month. Review the changes and ensure compliance across all job sites.</p>
                  </div>
                </div>
              </article>
              <article class="p-5 hover:bg-gray-50 transition-colors">
                <div class="flex items-start gap-4">
                  <div class="w-16 h-16 bg-red-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/></svg>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="px-2 py-0.5 bg-red-100 text-red-800 text-xs font-semibold rounded-full">Benefits</span>
                      <span class="text-xs text-gray-400">Jan 12, 2026</span>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Open Enrollment Deadline Approaching</h3>
                    <p class="text-sm text-gray-600">Don't miss your chance to update your benefits selections. Open enrollment closes January 31st.</p>
                  </div>
                </div>
              </article>
              <article class="p-5 hover:bg-gray-50 transition-colors">
                <div class="flex items-start gap-4">
                  <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                    <svg class="w-8 h-8 text-blue-950" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                  </div>
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-1">
                      <span class="px-2 py-0.5 bg-blue-100 text-blue-900 text-xs font-semibold rounded-full">Project</span>
                      <span class="text-xs text-gray-400">Jan 10, 2026</span>
                    </div>
                    <h3 class="font-semibold text-gray-900 mb-1">Downtown Plaza Project Breaks Ground</h3>
                    <p class="text-sm text-gray-600">Our largest commercial project of 2026 officially begins construction. Join us for the groundbreaking ceremony this Friday.</p>
                  </div>
                </div>
              </article>
            </div>
          </div>

          <!-- Events & Spotlight Column -->
          <div class="space-y-6">
            <!-- Employee Spotlight -->
            <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
