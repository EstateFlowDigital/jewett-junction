---
import ThemedPage from '../../layouts/themed-page.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { Image, Download, Palette, FileType, ArrowLeft, ExternalLink } from 'lucide-react';
import { initCMS, getMarketingAssets } from '../../lib/webflow-cms';

// Initialize CMS with runtime credentials
initCMS(Astro.locals);

// Fetch brand assets from CMS
const brandResult = await getMarketingAssets({ type: 'Brand Asset', limit: 50 });
const brandAssets = brandResult.items;

// Helper to get image URL
const getImageUrl = (img: any) => {
  if (!img) return null;
  if (typeof img === 'string') return img;
  if (img.url) return img.url;
  return null;
};
---

<ThemedPage title="Brand Assets | Jewett Junction" theme="dark" currentSection="marketing">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-slate-400 hover:text-white transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3 text-white">
          <Image className="h-7 w-7 text-blue-500" />
          Brand Assets
        </h1>
        <p class="text-slate-400 mt-1">
          Official logos, colors, and brand guidelines
        </p>
      </div>
    </div>

    <!-- Logo Downloads -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">Company Logos</CardTitle>
        <CardDescription className="text-slate-400">Download official Jewett Construction logos in various formats</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="border border-slate-600 rounded-lg p-4 text-center bg-slate-700/50">
            <div class="h-24 bg-slate-100 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-blue-600">JC</div>
            </div>
            <p class="font-medium text-sm text-white">Primary Logo</p>
            <p class="text-xs text-slate-400 mb-3">Full color, horizontal</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 text-center bg-slate-700/50">
            <div class="h-24 bg-slate-900 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-white">JC</div>
            </div>
            <p class="font-medium text-sm text-white">White Logo</p>
            <p class="text-xs text-slate-400 mb-3">For dark backgrounds</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 text-center bg-slate-700/50">
            <div class="h-24 bg-slate-100 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-slate-800">JC</div>
            </div>
            <p class="font-medium text-sm text-white">Black Logo</p>
            <p class="text-xs text-slate-400 mb-3">Single color version</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- CMS Brand Assets -->
    {brandAssets.length > 0 && (
      <Card className="bg-slate-800 border-slate-700">
        <CardHeader>
          <CardTitle className="text-white">Additional Brand Assets</CardTitle>
          <CardDescription className="text-slate-400">{brandAssets.length} assets from the CMS</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {brandAssets.map((asset) => {
              const imageUrl = getImageUrl(asset.thumbnail) || getImageUrl(asset['preview-image']);
              const downloadUrl = asset['download-link'];
              return (
                <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
                  <div class="h-24 bg-slate-600 rounded flex items-center justify-center mb-3 overflow-hidden">
                    {imageUrl ? (
                      <img src={imageUrl} alt={asset.name} class="w-full h-full object-contain" loading="lazy" />
                    ) : (
                      <Image className="h-8 w-8 text-slate-400" />
                    )}
                  </div>
                  <p class="font-medium text-sm text-white">{asset.name}</p>
                  <p class="text-xs text-slate-400 mb-3">{asset['file-format'] || 'Asset'}</p>
                  {downloadUrl && (
                    <a href={downloadUrl} target="_blank" rel="noopener">
                      <Button size="sm" variant="outline" className="w-full border-slate-600 text-slate-300 hover:bg-slate-600">
                        <Download className="h-3 w-3 mr-1" /> Download
                      </Button>
                    </a>
                  )}
                </div>
              );
            })}
          </div>
        </CardContent>
      </Card>
    )}

    <!-- Brand Colors -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-white">
          <Palette className="h-5 w-5" />
          Brand Colors
        </CardTitle>
        <CardDescription className="text-slate-400">Official color palette for all marketing materials</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-blue-600"></div>
            <p class="font-medium text-sm text-white">Jewett Blue</p>
            <p class="text-xs text-slate-400 font-mono">#2563EB</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-slate-800 border border-slate-600"></div>
            <p class="font-medium text-sm text-white">Slate Dark</p>
            <p class="text-xs text-slate-400 font-mono">#1E293B</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-orange-500"></div>
            <p class="font-medium text-sm text-white">Safety Orange</p>
            <p class="text-xs text-slate-400 font-mono">#F97316</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-green-600"></div>
            <p class="font-medium text-sm text-white">Success Green</p>
            <p class="text-xs text-slate-400 font-mono">#16A34A</p>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Typography -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-white">
          <FileType className="h-5 w-5" />
          Typography
        </CardTitle>
        <CardDescription className="text-slate-400">Approved fonts for digital and print materials</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-3">
            <h4 class="font-semibold text-white">Primary: Inter</h4>
            <p class="text-slate-400 text-sm">Used for headlines, titles, and emphasis</p>
            <div class="space-y-1 text-white">
              <p class="text-2xl font-bold">Aa Bb Cc 123</p>
              <p class="text-lg font-semibold">The quick brown fox</p>
            </div>
            <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-600">
              <Download className="h-3 w-3 mr-2" /> Download Font
            </Button>
          </div>
          <div class="space-y-3">
            <h4 class="font-semibold text-white">Secondary: System UI</h4>
            <p class="text-slate-400 text-sm">Used for body text and UI elements</p>
            <div class="space-y-1 font-sans text-white">
              <p class="text-2xl">Aa Bb Cc 123</p>
              <p class="text-lg">The quick brown fox</p>
            </div>
            <Badge variant="secondary" className="bg-slate-700 text-slate-300">System Default</Badge>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Brand Guidelines -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">Brand Guidelines PDF</CardTitle>
        <CardDescription className="text-slate-400">Complete brand standards and usage guidelines</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="flex items-center justify-between p-4 bg-slate-700 rounded-lg">
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 bg-red-900/50 rounded flex items-center justify-center">
              <FileType className="h-6 w-6 text-red-400" />
            </div>
            <div>
              <p class="font-medium text-white">Jewett_Brand_Guidelines_2026.pdf</p>
              <p class="text-sm text-slate-400">2.4 MB â€¢ Last updated Jan 2026</p>
            </div>
          </div>
          <Button className="bg-blue-600 hover:bg-blue-700">
            <Download className="h-4 w-4 mr-2" /> Download PDF
          </Button>
        </div>
      </CardContent>
    </Card>
  </div>
</ThemedPage>
