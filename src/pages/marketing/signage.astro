---
import ThemedPage from '../../layouts/themed-page.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { PenTool, ArrowLeft, MapPin, Building, Car, Flag, Send, Clock, CheckCircle } from 'lucide-react';
---

<ThemedPage title="Signage Request | Jewett Junction" theme="dark" currentSection="marketing">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-slate-400 hover:text-white transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3 text-white">
          <PenTool className="h-7 w-7 text-orange-500" />
          Signage Request
        </h1>
        <p class="text-slate-400 mt-1">
          Request job site and office signage
        </p>
      </div>
    </div>

    <!-- Request Form -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">New Signage Request</CardTitle>
        <CardDescription className="text-slate-400">Fill out the form below to request new signage</CardDescription>
      </CardHeader>
      <CardContent>
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium text-white">Requester Name</label>
              <input type="text" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white placeholder:text-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" placeholder="Your name" />
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-white">Department</label>
              <select class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
                <option value="">Select department...</option>
                <option>Project Management</option>
                <option>Field Operations</option>
                <option>Safety</option>
                <option>HR</option>
                <option>Executive</option>
              </select>
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-white">Signage Type</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
              <label class="flex items-center gap-2 p-3 border border-slate-600 rounded-lg cursor-pointer hover:bg-slate-700 bg-slate-700/50">
                <input type="radio" name="type" class="accent-blue-500" />
                <MapPin className="h-4 w-4 text-slate-400" />
                <span class="text-sm text-white">Job Site</span>
              </label>
              <label class="flex items-center gap-2 p-3 border border-slate-600 rounded-lg cursor-pointer hover:bg-slate-700 bg-slate-700/50">
                <input type="radio" name="type" class="accent-blue-500" />
                <Building className="h-4 w-4 text-slate-400" />
                <span class="text-sm text-white">Office</span>
              </label>
              <label class="flex items-center gap-2 p-3 border border-slate-600 rounded-lg cursor-pointer hover:bg-slate-700 bg-slate-700/50">
                <input type="radio" name="type" class="accent-blue-500" />
                <Car className="h-4 w-4 text-slate-400" />
                <span class="text-sm text-white">Vehicle</span>
              </label>
              <label class="flex items-center gap-2 p-3 border border-slate-600 rounded-lg cursor-pointer hover:bg-slate-700 bg-slate-700/50">
                <input type="radio" name="type" class="accent-blue-500" />
                <Flag className="h-4 w-4 text-slate-400" />
                <span class="text-sm text-white">Event</span>
              </label>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium text-white">Project/Location Name</label>
              <input type="text" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white placeholder:text-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" placeholder="e.g., Downtown Office Tower" />
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium text-white">Needed By Date</label>
              <input type="date" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white focus:border-blue-500 focus:ring-1 focus:ring-blue-500" />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-white">Delivery Address</label>
            <input type="text" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white placeholder:text-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" placeholder="Full address for delivery" />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-white">Quantity</label>
            <input type="number" class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white placeholder:text-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" placeholder="1" min="1" />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium text-white">Special Instructions</label>
            <textarea class="w-full px-3 py-2 bg-slate-700 border border-slate-600 rounded-md text-sm text-white placeholder:text-slate-400 focus:border-blue-500 focus:ring-1 focus:ring-blue-500" rows="3" placeholder="Any specific requirements, dimensions, or additional details..."></textarea>
          </div>

          <Button type="submit" className="w-full md:w-auto bg-blue-600 hover:bg-blue-700 text-white">
            <Send className="h-4 w-4 mr-2" /> Submit Request
          </Button>
        </form>
      </CardContent>
    </Card>

    <!-- Available Signage Types -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">Standard Signage Options</CardTitle>
        <CardDescription className="text-slate-400">Pre-approved signage types available for request</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-24 bg-blue-600 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center">
                <div class="text-lg font-bold">JEWETT</div>
                <div class="text-xs">CONSTRUCTION</div>
              </div>
            </div>
            <p class="font-medium text-sm text-white">Job Site Banner</p>
            <p class="text-xs text-slate-400">4' x 8' outdoor banner</p>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-24 bg-orange-500 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center text-sm font-bold">
                ⚠️ SAFETY FIRST
              </div>
            </div>
            <p class="font-medium text-sm text-white">Safety Sign</p>
            <p class="text-xs text-slate-400">24" x 36" safety signage</p>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-24 bg-slate-900 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center">
                <div class="text-sm font-bold">PROJECT NAME</div>
                <div class="text-xs opacity-60">Jewett Construction</div>
              </div>
            </div>
            <p class="font-medium text-sm text-white">Project Sign</p>
            <p class="text-xs text-slate-400">3' x 4' project identifier</p>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Processing Timeline -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-white">
          <Clock className="h-5 w-5" />
          Processing Timeline
        </CardTitle>
      </CardHeader>
      <CardContent>
        <div class="flex flex-col md:flex-row gap-4">
          <div class="flex-1 flex items-center gap-3 p-3 bg-slate-700/50 rounded-lg">
            <div class="h-8 w-8 bg-blue-900/50 rounded-full flex items-center justify-center">
              <span class="text-blue-400 font-bold text-sm">1</span>
            </div>
            <div>
              <p class="font-medium text-sm text-white">Request Review</p>
              <p class="text-xs text-slate-400">1-2 business days</p>
            </div>
          </div>
          <div class="flex-1 flex items-center gap-3 p-3 bg-slate-700/50 rounded-lg">
            <div class="h-8 w-8 bg-orange-900/50 rounded-full flex items-center justify-center">
              <span class="text-orange-400 font-bold text-sm">2</span>
            </div>
            <div>
              <p class="font-medium text-sm text-white">Production</p>
              <p class="text-xs text-slate-400">3-5 business days</p>
            </div>
          </div>
          <div class="flex-1 flex items-center gap-3 p-3 bg-slate-700/50 rounded-lg">
            <div class="h-8 w-8 bg-green-900/50 rounded-full flex items-center justify-center">
              <CheckCircle className="h-4 w-4 text-green-400" />
            </div>
            <div>
              <p class="font-medium text-sm text-white">Delivery</p>
              <p class="text-xs text-slate-400">1-3 business days</p>
            </div>
          </div>
        </div>
        <p class="text-xs text-slate-400 mt-4">
          Rush orders may be available. Contact Marketing directly for urgent requests.
        </p>
      </CardContent>
    </Card>
  </div>
</ThemedPage>
