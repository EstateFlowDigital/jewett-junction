---
import ThemedPage from '../../layouts/themed-page.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../components/ui/card';
import { Button } from '../../components/ui/button';
import { Badge } from '../../components/ui/badge';
import { FileText, Download, ArrowLeft, File, FileSpreadsheet, Mail } from 'lucide-react';
import { initCMS, getMarketingAssets } from '../../lib/webflow-cms';

// Initialize CMS with runtime credentials
initCMS(Astro.locals);

// Fetch letterhead/form assets from CMS
const formsResult = await getMarketingAssets({ type: 'Form', limit: 50 });
const forms = formsResult.items;

// Helper to get download URL
const getDownloadUrl = (item: any) => item['download-link'] || null;
---

<ThemedPage title="Letterhead & Forms | Jewett Junction" theme="dark" currentSection="marketing">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-slate-400 hover:text-white transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3 text-white">
          <FileText className="h-7 w-7 text-blue-500" />
          Letterhead & Forms
        </h1>
        <p class="text-slate-400 mt-1">
          Official document templates and forms
        </p>
      </div>
    </div>

    <!-- Letterhead Templates -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">Letterhead Templates</CardTitle>
        <CardDescription className="text-slate-400">Official company letterhead for correspondence</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-32 bg-slate-900 rounded border border-slate-600 mb-3 flex items-start justify-center pt-4">
              <div class="text-center">
                <div class="text-lg font-bold text-blue-400">JC</div>
                <div class="text-[8px] text-slate-400 mt-1">JEWETT CONSTRUCTION</div>
                <div class="w-16 h-px bg-slate-600 mx-auto mt-2"></div>
              </div>
            </div>
            <p class="font-medium text-sm text-white">Standard Letterhead</p>
            <p class="text-xs text-slate-400 mb-3">For general correspondence</p>
            <div class="flex gap-2">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Word
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> PDF
              </Button>
            </div>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-32 bg-slate-900 rounded border border-slate-600 mb-3 flex items-start justify-center pt-4">
              <div class="text-center">
                <div class="text-lg font-bold text-blue-400">JC</div>
                <div class="text-[8px] text-slate-400 mt-1">EXECUTIVE OFFICE</div>
                <div class="w-16 h-px bg-blue-500/50 mx-auto mt-2"></div>
              </div>
            </div>
            <p class="font-medium text-sm text-white">Executive Letterhead</p>
            <p class="text-xs text-slate-400 mb-3">For leadership communications</p>
            <div class="flex gap-2">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Word
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> PDF
              </Button>
            </div>
          </div>

          <div class="border border-slate-600 rounded-lg p-4 bg-slate-700/50">
            <div class="h-32 bg-slate-900 rounded border border-slate-600 mb-3 flex items-start justify-center pt-4">
              <div class="text-center">
                <div class="text-lg font-bold text-blue-400">JC</div>
                <div class="text-[8px] text-slate-400 mt-1">PROJECT CORRESPONDENCE</div>
                <div class="w-16 h-px bg-orange-500/50 mx-auto mt-2"></div>
              </div>
            </div>
            <p class="font-medium text-sm text-white">Project Letterhead</p>
            <p class="text-xs text-slate-400 mb-3">For project communications</p>
            <div class="flex gap-2">
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Word
              </Button>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> PDF
              </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- CMS Forms (if available) -->
    {forms.length > 0 && (
      <Card className="bg-slate-800 border-slate-700">
        <CardHeader>
          <CardTitle className="text-white">Available Forms</CardTitle>
          <CardDescription className="text-slate-400">{forms.length} forms from the CMS</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="space-y-3">
            {forms.map((form) => (
              <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
                <div class="flex items-center gap-3">
                  <File className="h-5 w-5 text-blue-400" />
                  <div>
                    <p class="font-medium text-sm text-white">{form.name}</p>
                    {form.description && <p class="text-xs text-slate-400">{form.description}</p>}
                  </div>
                </div>
                {getDownloadUrl(form) && (
                  <a href={getDownloadUrl(form)} target="_blank" rel="noopener">
                    <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                      <Download className="h-3 w-3 mr-1" /> Download
                    </Button>
                  </a>
                )}
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    )}

    <!-- Business Forms -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="text-white">Business Forms</CardTitle>
        <CardDescription className="text-slate-400">Commonly used internal and external forms</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="space-y-3">
          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
            <div class="flex items-center gap-3">
              <File className="h-5 w-5 text-blue-400" />
              <div>
                <p class="font-medium text-sm text-white">Expense Report Form</p>
                <p class="text-xs text-slate-400">Submit expense reimbursements</p>
              </div>
            </div>
            <div class="flex gap-2 items-center">
              <Badge variant="secondary" className="bg-slate-600 text-slate-300">Excel</Badge>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Download
              </Button>
            </div>
          </div>

          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
            <div class="flex items-center gap-3">
              <File className="h-5 w-5 text-green-400" />
              <div>
                <p class="font-medium text-sm text-white">Time Off Request</p>
                <p class="text-xs text-slate-400">PTO and leave requests</p>
              </div>
            </div>
            <div class="flex gap-2 items-center">
              <Badge variant="secondary" className="bg-slate-600 text-slate-300">PDF</Badge>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Download
              </Button>
            </div>
          </div>

          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
            <div class="flex items-center gap-3">
              <FileSpreadsheet className="h-5 w-5 text-orange-400" />
              <div>
                <p class="font-medium text-sm text-white">Purchase Order Form</p>
                <p class="text-xs text-slate-400">Material and equipment orders</p>
              </div>
            </div>
            <div class="flex gap-2 items-center">
              <Badge variant="secondary" className="bg-slate-600 text-slate-300">Excel</Badge>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Download
              </Button>
            </div>
          </div>

          <div class="flex items-center justify-between p-3 bg-slate-700/50 rounded-lg">
            <div class="flex items-center gap-3">
              <File className="h-5 w-5 text-purple-400" />
              <div>
                <p class="font-medium text-sm text-white">Mileage Log</p>
                <p class="text-xs text-slate-400">Track business travel mileage</p>
              </div>
            </div>
            <div class="flex gap-2 items-center">
              <Badge variant="secondary" className="bg-slate-600 text-slate-300">Excel</Badge>
              <Button size="sm" variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
                <Download className="h-3 w-3 mr-1" /> Download
              </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Email Signature -->
    <Card className="bg-slate-800 border-slate-700">
      <CardHeader>
        <CardTitle className="flex items-center gap-2 text-white">
          <Mail className="h-5 w-5" />
          Email Signature
        </CardTitle>
        <CardDescription className="text-slate-400">Standard email signature template</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="border border-slate-600 rounded-lg p-4 bg-white">
          <div class="border-l-4 border-blue-600 pl-4">
            <p class="font-semibold text-slate-800">John Smith</p>
            <p class="text-sm text-slate-600">Project Manager</p>
            <p class="text-sm text-slate-600">Jewett Construction</p>
            <div class="mt-2 text-sm text-slate-500">
              <p>P: (555) 123-4567</p>
              <p>E: john.smith@jewett.com</p>
            </div>
          </div>
        </div>
        <div class="mt-4 flex gap-2">
          <Button variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
            <Download className="h-4 w-4 mr-2" /> Download HTML
          </Button>
          <Button variant="outline" className="border-slate-600 text-slate-300 hover:bg-slate-700">
            View Setup Guide
          </Button>
        </div>
      </CardContent>
    </Card>
  </div>
</ThemedPage>
