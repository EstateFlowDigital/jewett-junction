---
import ThemedPage from '../../layouts/themed-page.astro';
import { initCMS, getJobPostingBySlug, getJobPostings, decodeHtmlEntities } from '../../lib/webflow-cms';

export const prerender = false;

// Initialize CMS with Cloudflare runtime context
initCMS(Astro.locals);

const { slug } = Astro.params;

// Fetch the job posting by slug
let job: any = null;
let relatedJobs: any[] = [];

try {
  if (slug) {
    job = await getJobPostingBySlug(slug);

    // Also fetch related jobs
    const result = await getJobPostings({ limit: 4 });
    relatedJobs = result.items.filter(j => j.slug !== slug).slice(0, 3);
  }
} catch (error) {
  console.error('Error fetching job posting:', error);
}

// If job not found, redirect
if (!job) {
  return Astro.redirect('/jewett-junction/careers');
}

// Format salary
const formatSalary = (min?: number, max?: number) => {
  if (!min && !max) return null;
  if (min && max) return `$${min.toLocaleString()} - $${max.toLocaleString()}`;
  if (min) return `From $${min.toLocaleString()}`;
  return `Up to $${max?.toLocaleString()}`;
};

const salaryRange = formatSalary(job['salary-min'], job['salary-max']);
---

<ThemedPage title={`${job.name} | Careers | Jewett Junction`} theme="dark" currentSection="careers">
  <!-- Back link -->
  <a href="/jewett-junction/careers" class="inline-flex items-center gap-2 text-slate-400 hover:text-blue-400 mb-6 transition-colors">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Careers
  </a>

  <div class="grid lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Job Header -->
      <div class="glass rounded-2xl p-8 border border-slate-800/50">
        <div class="mb-6">
          <div class="flex flex-wrap items-center gap-2 mb-3">
            {job.department && (
              <span class="inline-block px-3 py-1 text-xs font-medium bg-blue-500/20 text-blue-400 rounded-full">
                {job.department}
              </span>
            )}
            {job['employment-type'] && (
              <span class="inline-block px-3 py-1 text-xs font-medium bg-green-500/20 text-green-400 rounded-full">
                {job['employment-type']}
              </span>
            )}
            {job['experience-level'] && (
              <span class="inline-block px-3 py-1 text-xs font-medium bg-purple-500/20 text-purple-400 rounded-full">
                {job['experience-level']}
              </span>
            )}
            {job.urgency === 'Urgent' && (
              <span class="inline-block px-3 py-1 text-xs font-medium bg-red-500/20 text-red-400 rounded-full border border-red-500/30">
                Urgent Hire
              </span>
            )}
            {job['is-remote'] && (
              <span class="inline-block px-3 py-1 text-xs font-medium bg-cyan-500/20 text-cyan-400 rounded-full">
                Remote Eligible
              </span>
            )}
          </div>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">{job.name}</h1>
          <div class="flex flex-wrap items-center gap-4 text-slate-400">
            {job.location && (
              <span class="flex items-center gap-1">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
                {job.location}
              </span>
            )}
            {salaryRange && (
              <span class="flex items-center gap-1 text-emerald-400">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                {salaryRange}
              </span>
            )}
          </div>
        </div>
      </div>

      <!-- Description -->
      <div class="glass rounded-2xl p-8 border border-slate-800/50">
        <h2 class="text-xl font-semibold text-white mb-4">Job Description</h2>
        <div class="prose prose-invert max-w-none prose-li:marker:text-blue-400">
          <div class="text-slate-300 leading-relaxed" set:html={decodeHtmlEntities(job.description)} />
        </div>
      </div>

      <!-- Requirements -->
      {job.requirements && (
        <div class="glass rounded-2xl p-8 border border-slate-800/50">
          <h2 class="text-xl font-semibold text-white mb-4">Requirements</h2>
          <div class="prose prose-invert max-w-none prose-li:marker:text-blue-400">
            <div class="text-slate-300 leading-relaxed" set:html={decodeHtmlEntities(job.requirements)} />
          </div>
        </div>
      )}

      <!-- Benefits -->
      {job.benefits && (
        <div class="glass rounded-2xl p-8 border border-slate-800/50">
          <h2 class="text-xl font-semibold text-white mb-4">Benefits</h2>
          <div class="prose prose-invert max-w-none prose-li:marker:text-blue-400">
            <div class="text-slate-300 leading-relaxed" set:html={decodeHtmlEntities(job.benefits)} />
          </div>
        </div>
      )}
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Apply Card -->
      <div class="glass rounded-2xl p-6 border border-blue-500/30 bg-gradient-to-br from-blue-500/10 to-purple-500/10 sticky top-6">
        <h3 class="text-lg font-semibold text-white mb-4">Interested in this role?</h3>

        <div class="space-y-3 mb-6">
          {job.location && (
            <div class="flex items-center gap-3 text-slate-300">
              <div class="w-10 h-10 bg-green-500/20 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-400">Location</p>
                <p class="font-medium text-white">{job.location}</p>
              </div>
            </div>
          )}

          {job.department && (
            <div class="flex items-center gap-3 text-slate-300">
              <div class="w-10 h-10 bg-purple-500/20 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-400">Department</p>
                <p class="font-medium text-white">{job.department}</p>
              </div>
            </div>
          )}

          {job['referral-bonus'] && (
            <div class="flex items-center gap-3 text-slate-300">
              <div class="w-10 h-10 bg-amber-500/20 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm text-slate-400">Referral Bonus</p>
                <p class="font-medium text-amber-400">${job['referral-bonus'].toLocaleString()}</p>
              </div>
            </div>
          )}
        </div>

        <div class="space-y-3">
          {job['apply-link'] ? (
            <a
              href={job['apply-link']}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-xl transition-colors"
            >
              Apply Now
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ) : (
            <a
              href="mailto:careers@jewett.com"
              class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-xl transition-colors"
            >
              Apply via Email
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          )}
          <button
            onclick="navigator.share?.({title: document.title, url: window.location.href}) || navigator.clipboard.writeText(window.location.href)"
            class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white font-medium rounded-xl transition-colors"
          >
            Share Position
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Related Jobs -->
      {relatedJobs.length > 0 && (
        <div class="glass rounded-2xl p-6 border border-slate-800/50">
          <h3 class="text-lg font-semibold text-white mb-4">Other Open Positions</h3>
          <div class="space-y-3">
            {relatedJobs.map((relatedJob) => (
              <a
                href={`/jewett-junction/careers/${relatedJob.slug}`}
                class="flex items-center gap-4 p-3 rounded-xl hover:bg-slate-800/50 transition-colors group"
              >
                <div class="w-10 h-10 bg-slate-800 rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h4 class="font-medium text-white group-hover:text-blue-400 transition-colors truncate text-sm">
                    {relatedJob.name}
                  </h4>
                  <p class="text-xs text-slate-400">
                    {relatedJob.location}
                  </p>
                </div>
                <svg class="w-4 h-4 text-slate-500 group-hover:text-blue-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</ThemedPage>
