---
import '../../../../generated/fonts.css';
import '../../../../generated/webflow.css';
import '../../../site-components/global.css';
import '../../../styles/global.css';
import { ThemeSwitcher } from '../../../components/ThemeSwitcher';
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dark Dashboard | Jewett Junction</title>
    <style>
      .glow-blue { box-shadow: 0 0 60px rgba(59, 130, 246, 0.15); }
      .glow-green { box-shadow: 0 0 60px rgba(34, 197, 94, 0.15); }
      .glow-purple { box-shadow: 0 0 60px rgba(168, 85, 247, 0.15); }
      .card-hover:hover { transform: translateY(-2px); }
      .glass { background: rgba(30, 41, 59, 0.8); backdrop-filter: blur(12px); }
    </style>
  </head>
  <body class="bg-slate-950 text-gray-100 min-h-screen">
    <!-- Gradient Background -->
    <div class="fixed inset-0 bg-gradient-to-br from-slate-950 via-slate-900 to-slate-950 -z-10"></div>
    <div class="fixed top-0 left-1/4 w-96 h-96 bg-blue-500/5 rounded-full blur-3xl -z-10"></div>
    <div class="fixed bottom-0 right-1/4 w-96 h-96 bg-purple-500/5 rounded-full blur-3xl -z-10"></div>

    <!-- Sidebar -->
    <aside class="fixed left-0 top-0 bottom-0 w-20 glass border-r border-slate-800/50 z-40 hidden md:flex flex-col items-center py-6">
      <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center text-white mb-8 shadow-lg shadow-blue-500/30">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
      </div>
      <nav class="flex-1 flex flex-col items-center gap-3">
        <a href="/jewett-junction/dashboard/dark" class="w-12 h-12 bg-blue-500/20 border border-blue-500/30 rounded-xl flex items-center justify-center text-blue-400 transition-all" title="Dashboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/></svg>
        </a>
        <a href="/jewett-junction/safety/dark" class="w-12 h-12 hover:bg-slate-800 rounded-xl flex items-center justify-center text-slate-400 hover:text-slate-200 transition-all" title="Safety">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        </a>
        <a href="/jewett-junction/hr/dark" class="w-12 h-12 hover:bg-slate-800 rounded-xl flex items-center justify-center text-slate-400 hover:text-slate-200 transition-all" title="HR">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
        </a>
        <a href="/jewett-junction/events/dark" class="w-12 h-12 hover:bg-slate-800 rounded-xl flex items-center justify-center text-slate-400 hover:text-slate-200 transition-all" title="Calendar">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        </a>
        <a href="/jewett-junction/careers/dark" class="w-12 h-12 hover:bg-slate-800 rounded-xl flex items-center justify-center text-slate-400 hover:text-slate-200 transition-all" title="Careers">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
        </a>
        <a href="/jewett-junction/directory" class="w-12 h-12 hover:bg-slate-800 rounded-xl flex items-center justify-center text-slate-400 hover:text-slate-200 transition-all" title="Directory">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </a>
      </nav>
      <div class="w-12 h-12 bg-gradient-to-br from-slate-600 to-slate-700 rounded-full flex items-center justify-center text-sm font-medium border border-slate-600">JC</div>
    </aside>

    <!-- Main -->
    <main class="md:pl-20 min-h-screen">
      <div class="p-6 md:p-8 lg:p-10">
        <!-- Back Link -->
        <a href="/jewett-junction/preview" class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-slate-300 mb-8 group">
          <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Style Selector
        </a>

        <!-- Header Row -->
        <div class="flex items-start justify-between mb-10">
          <div>
            <h1 class="text-4xl font-bold text-white mb-2">Welcome to Jewett Junction</h1>
            <p class="text-slate-400 text-lg">Your central hub for company news, resources, and updates. Tuesday, January 14th, 2025.</p>
          </div>
          <div class="flex items-center gap-3 glass px-4 py-2.5 rounded-2xl border border-slate-700/50">
            <div class="w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-500 rounded-xl flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            </div>
            <div>
              <div class="text-sm font-semibold text-white">247 Days</div>
              <div class="text-xs text-slate-400">Without Incident</div>
            </div>
          </div>
        </div>

        <!-- Featured Announcement -->
        <div class="bg-gradient-to-br from-blue-600/80 to-purple-600/80 rounded-3xl p-6 mb-10 border border-blue-500/30 glow-blue relative overflow-hidden">
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl"></div>
          <div class="relative">
            <span class="text-xs text-blue-200 uppercase tracking-wider">Featured Announcement</span>
            <h2 class="text-2xl font-bold text-white mt-2 mb-3">Q4 2024 Results Are In!</h2>
            <p class="text-blue-100 mb-4 max-w-2xl">We exceeded our safety and revenue targets this quarter. Join us for the all-hands meeting on Wednesday to celebrate our achievements and hear about plans for 2025.</p>
            <div class="flex items-center gap-4">
              <a href="/jewett-junction/resources/dark" class="px-5 py-2.5 bg-white text-blue-600 rounded-xl text-sm font-semibold hover:bg-blue-50 transition-colors">Read Full Announcement</a>
              <span class="text-sm text-blue-200">CEO Office • 2 hours ago</span>
            </div>
          </div>
        </div>

        <!-- Bento Grid Stats -->
        <div class="grid grid-cols-12 gap-4 mb-10">
          <!-- Safety Card - Large -->
          <div class="col-span-12 md:col-span-5 glass rounded-3xl p-6 border border-emerald-500/20 glow-green relative overflow-hidden card-hover transition-transform">
            <div class="absolute top-0 right-0 w-40 h-40 bg-emerald-500/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl"></div>
            <div class="relative">
              <div class="w-14 h-14 bg-emerald-500/20 border border-emerald-500/30 rounded-2xl flex items-center justify-center mb-4">
                <svg class="w-7 h-7 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <div class="text-sm text-slate-400 mb-1">Days Without Incident</div>
              <div class="text-6xl font-bold text-emerald-400 mb-2">247</div>
              <div class="flex items-center gap-2 text-sm text-emerald-400/70">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
                Company record: 312 days
              </div>
            </div>
          </div>

          <!-- Right Column Stats -->
          <div class="col-span-12 md:col-span-7 grid grid-cols-2 gap-4">
            <div class="glass rounded-2xl p-5 border border-slate-700/50 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-slate-400">Active Projects</span>
                <div class="w-10 h-10 bg-blue-500/20 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-white">42</div>
              <div class="text-sm text-emerald-400 mt-1">+3 this month</div>
            </div>
            <div class="glass rounded-2xl p-5 border border-slate-700/50 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-slate-400">Total Employees</span>
                <div class="w-10 h-10 bg-purple-500/20 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-white">156</div>
              <div class="text-sm text-slate-500 mt-1">Across 5 locations</div>
            </div>
            <div class="glass rounded-2xl p-5 border border-slate-700/50 card-hover transition-transform">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-slate-400">Open Positions</span>
                <div class="w-10 h-10 bg-amber-500/20 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
                </div>
              </div>
              <div class="text-4xl font-bold text-white">8</div>
              <div class="text-sm text-amber-400 mt-1">View openings →</div>
            </div>
            <div class="bg-gradient-to-br from-blue-600/80 to-purple-600/80 rounded-2xl p-5 border border-blue-500/30 card-hover transition-transform glow-blue">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm text-blue-200">Referral Bonus</span>
                <svg class="w-6 h-6 text-blue-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
              </div>
              <div class="text-4xl font-bold text-white">$500</div>
              <div class="text-sm text-blue-200 mt-1">Per successful hire</div>
            </div>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mb-10">
          <h2 class="text-sm font-semibold text-slate-500 uppercase tracking-wider mb-4">Quick Links</h2>
          <div class="grid grid-cols-2 md:grid-cols-6 gap-3">
            <a href="/jewett-junction/safety/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-emerald-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-emerald-500/20 border border-emerald-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <div class="font-medium text-white text-sm">Safety</div>
            </a>
            <a href="/jewett-junction/hr/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-blue-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-blue-500/20 border border-blue-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div class="font-medium text-white text-sm">HR</div>
            </a>
            <a href="/jewett-junction/it-helpdesk/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-green-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-green-500/20 border border-green-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              </div>
              <div class="font-medium text-white text-sm">IT Help</div>
            </a>
            <a href="/jewett-junction/resources/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-purple-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-purple-500/20 border border-purple-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              </div>
              <div class="font-medium text-white text-sm">Training</div>
            </a>
            <a href="/jewett-junction/events/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-amber-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-amber-500/20 border border-amber-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              <div class="font-medium text-white text-sm">Calendar</div>
            </a>
            <a href="/jewett-junction/careers/dark" class="glass rounded-2xl p-4 border border-slate-700/50 hover:border-orange-500/30 transition-all card-hover text-center group">
              <div class="w-10 h-10 bg-orange-500/20 border border-orange-500/30 rounded-xl flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div class="font-medium text-white text-sm">Careers</div>
            </a>
          </div>
        </div>

        <!-- News & Events -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-10">
          <!-- News Feed -->
          <div class="lg:col-span-2 glass rounded-2xl border border-slate-700/50 overflow-hidden">
            <div class="p-5 border-b border-slate-700/50 flex items-center justify-between">
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 bg-blue-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
                </div>
                <h2 class="font-semibold text-white">News & Updates</h2>
              </div>
              <a href="/jewett-junction/resources/dark" class="text-sm text-blue-400 hover:text-blue-300">View All</a>
            </div>
            <div class="divide-y divide-slate-800/50">
              <div class="p-4 flex items-center gap-4 hover:bg-slate-800/30 transition-colors">
                <div class="w-10 h-10 bg-blue-500/20 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <span class="text-xs text-blue-400 font-medium">Company News</span>
                  <div class="text-sm text-white">Q4 Results Exceed Expectations</div>
                  <div class="text-xs text-slate-500">Strong performance across all divisions...</div>
                </div>
                <span class="text-xs text-slate-500">2h ago</span>
              </div>
