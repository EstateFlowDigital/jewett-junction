---
import '../../../../generated/fonts.css';
import '../../../../generated/webflow.css';
import '../../../site-components/global.css';
import '../../../styles/global.css';
import { ThemeSwitcher } from '../../../components/ThemeSwitcher';
import { MobileNav } from '../../../components/layout/MobileNav';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Modern Dashboard | Jewett Junction</title>
    <style>
      .card-hover:hover { transform: translateY(-2px); }
      /* Safe area for mobile nav button */
      @media (max-width: 767px) {
        .mobile-safe-area { padding-top: 4.5rem; }
      }
    </style>
  </head>
  <body class="bg-slate-50 min-h-screen">
    <!-- Mobile Navigation -->
    <MobileNav client:load currentTheme="modern" currentPath="/jewett-junction/dashboard" />

    <!-- Desktop Sidebar -->
    <aside class="fixed left-0 top-0 bottom-0 w-16 bg-white border-r border-slate-200 z-40 hidden md:flex flex-col items-center py-4">
      <a href="/jewett-junction" class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-700 rounded-xl flex items-center justify-center text-white mb-6 hover:scale-105 transition-transform" title="Home">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
      </a>
      <nav class="flex-1 flex flex-col items-center gap-2">
        <a href="/jewett-junction/dashboard/modern" class="w-10 h-10 bg-blue-50 text-blue-600 rounded-xl flex items-center justify-center" title="Dashboard">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/></svg>
        </a>
        <a href="/jewett-junction/safety/modern" class="w-10 h-10 hover:bg-slate-100 text-slate-400 rounded-xl flex items-center justify-center transition-colors" title="Safety">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        </a>
        <a href="/jewett-junction/hr/modern" class="w-10 h-10 hover:bg-slate-100 text-slate-400 rounded-xl flex items-center justify-center transition-colors" title="HR">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
        </a>
        <a href="/jewett-junction/events/modern" class="w-10 h-10 hover:bg-slate-100 text-slate-400 rounded-xl flex items-center justify-center transition-colors" title="Events">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
        </a>
        <a href="/jewett-junction/resources/modern" class="w-10 h-10 hover:bg-slate-100 text-slate-400 rounded-xl flex items-center justify-center transition-colors" title="Resources">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
        </a>
      </nav>
    </aside>

    <!-- Main Content -->
    <main class="md:pl-16 min-h-screen">
      <div class="p-4 sm:p-6 md:p-8 lg:p-10 mobile-safe-area md:pt-6">
        <!-- Back Link -->
        <a href="/jewett-junction" class="inline-flex items-center gap-2 text-sm text-slate-400 hover:text-slate-600 mb-6 md:mb-8 group">
          <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Style Selector
        </a>

        <!-- Header -->
        <div class="mb-6 md:mb-10">
          <h1 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-2">Jewett Junction</h1>
          <p class="text-sm sm:text-base text-slate-500">Your employee resource hub - Building America since 1972</p>
        </div>

        <!-- Top Stats Row -->
        <div class="grid grid-cols-1 md:grid-cols-12 gap-4 mb-6 md:mb-8">
          <!-- Safety Card -->
          <div class="md:col-span-4 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-2xl p-5 sm:p-6 text-white relative overflow-hidden">
            <div class="absolute top-0 right-0 w-24 sm:w-32 h-24 sm:h-32 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/2"></div>
            <div class="relative">
              <div class="text-emerald-100 text-xs sm:text-sm mb-1">Company Safety Record</div>
              <div class="text-4xl sm:text-5xl font-bold mb-1">247</div>
              <div class="text-emerald-100 text-sm">Days Without Incident</div>
            </div>
          </div>

          <!-- Featured Announcement -->
          <div class="md:col-span-8 bg-white rounded-2xl p-5 sm:p-6 border border-slate-200 shadow-sm">
            <div class="flex flex-col sm:flex-row items-start gap-4">
              <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-xl flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"/></svg>
              </div>
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-2 mb-1">
                  <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">Featured</span>
                  <span class="text-xs text-slate-400">January 14, 2026</span>
                </div>
                <h2 class="text-base sm:text-lg font-semibold text-slate-900 mb-1">Q4 2025 Results: Record-Breaking Year!</h2>
                <p class="text-slate-600 text-sm line-clamp-2 sm:line-clamp-none">We're proud to announce our best quarter yet. Thank you to every team member who made this possible.</p>
                <a href="/jewett-junction/resources/modern" class="inline-flex items-center gap-1 text-blue-600 text-sm font-medium mt-2 hover:text-blue-700">
                  Read More
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                </a>
              </div>
            </div>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mb-6 md:mb-8">
          <h2 class="text-sm font-semibold text-slate-500 uppercase tracking-wider mb-3 sm:mb-4">Quick Links</h2>
          <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-6 gap-2 sm:gap-3">
            <a href="/jewett-junction/safety/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-red-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">Safety</div>
            </a>
            <a href="/jewett-junction/hr/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">HR</div>
            </a>
            <a href="/jewett-junction/it-helpdesk/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-purple-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">IT Help</div>
            </a>
            <a href="/jewett-junction/resources/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-amber-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">Training</div>
            </a>
            <a href="/jewett-junction/careers/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">Careers</div>
            </a>
            <a href="/jewett-junction/events/modern" class="bg-white rounded-xl p-3 sm:p-4 border border-slate-200 hover:border-slate-300 hover:shadow-sm transition-all text-center group">
              <div class="w-8 h-8 sm:w-10 sm:h-10 bg-slate-100 rounded-lg flex items-center justify-center mx-auto mb-1.5 sm:mb-2 group-hover:scale-110 transition-transform">
                <svg class="w-4 h-4 sm:w-5 sm:h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              <div class="text-xs sm:text-sm font-medium text-slate-900">Calendar</div>
            </a>
          </div>
        </div>

        <!-- Three Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4 sm:gap-6">
          <!-- News & Updates -->
          <div class="lg:col-span-2 bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="p-4 sm:p-5 border-b border-slate-100 flex items-center justify-between">
              <h2 class="font-semibold text-slate-900">News & Updates</h2>
              <a href="/jewett-junction/resources/modern" class="text-sm text-blue-600 hover:text-blue-700">View All</a>
            </div>
            <div class="divide-y divide-slate-100">
              <div class="p-4 sm:p-5 hover:bg-slate-50 transition-colors">
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="px-2 py-0.5 bg-green-100 text-green-700 text-xs font-medium rounded-full">Safety</span>
                  <span class="text-xs text-slate-400">January 12, 2026</span>
                </div>
                <h3 class="font-medium text-slate-900 mb-1 text-sm sm:text-base">New Safety Protocol Training Available</h3>
                <p class="text-xs sm:text-sm text-slate-600 line-clamp-2">Updated guidelines for equipment operation are now available in the training portal.</p>
              </div>
              <div class="p-4 sm:p-5 hover:bg-slate-50 transition-colors">
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="px-2 py-0.5 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">HR</span>
                  <span class="text-xs text-slate-400">January 10, 2026</span>
                </div>
                <h3 class="font-medium text-slate-900 mb-1 text-sm sm:text-base">Open Enrollment Deadline Approaching</h3>
                <p class="text-xs sm:text-sm text-slate-600 line-clamp-2">Don't forget to update your benefits selections by January 31st.</p>
              </div>
              <div class="p-4 sm:p-5 hover:bg-slate-50 transition-colors">
                <div class="flex flex-wrap items-center gap-2 mb-2">
                  <span class="px-2 py-0.5 bg-purple-100 text-purple-700 text-xs font-medium rounded-full">Company</span>
                  <span class="text-xs text-slate-400">January 8, 2026</span>
                </div>
                <h3 class="font-medium text-slate-900 mb-1 text-sm sm:text-base">Welcome Our New Team Members!</h3>
                <p class="text-xs sm:text-sm text-slate-600 line-clamp-2">Please join us in welcoming Sarah Chen and Marcus Williams to the team.</p>
              </div>
            </div>
          </div>

          <!-- Events & Employee Spotlight -->
          <div class="space-y-4 sm:space-y-6">
            <!-- Upcoming Events -->
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
              <div class="p-4 sm:p-5 border-b border-slate-100">
                <h2 class="font-semibold text-slate-900">Upcoming Events</h2>
              </div>
              <div class="p-3 sm:p-4 space-y-2 sm:space-y-3">
                <div class="flex gap-3 p-2.5 sm:p-3 bg-blue-50 rounded-xl">
                  <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-600 rounded-lg flex flex-col items-center justify-center text-white flex-shrink-0">
                    <span class="text-[10px] sm:text-xs">Wed</span>
                    <span class="text-base sm:text-lg font-bold">15</span>
                  </div>
                  <div class="min-w-0">
                    <div class="font-medium text-slate-900 text-sm truncate">All-Hands Meeting</div>
                    <div class="text-xs text-slate-500 truncate">10:00 AM - Main Conference</div>
                  </div>
                </div>
                <div class="flex gap-3 p-2.5 sm:p-3 hover:bg-slate-50 rounded-xl transition-colors">
                  <div class="w-10 h-10 sm:w-12 sm:h-12 bg-amber-500 rounded-lg flex flex-col items-center justify-center text-white flex-shrink-0">
                    <span class="text-[10px] sm:text-xs">Fri</span>
                    <span class="text-base sm:text-lg font-bold">17</span>
                  </div>
                  <div class="min-w-0">
                    <div class="font-medium text-slate-900 text-sm truncate">Safety Training</div>
                    <div class="text-xs text-slate-500 truncate">2:00 PM - Training Center</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Employee Spotlight -->
            <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl p-4 sm:p-5 text-white">
              <div class="text-blue-200 text-xs uppercase tracking-wider mb-2 sm:mb-3">Employee Spotlight</div>
              <div class="flex items-center gap-3 mb-2 sm:mb-3">
                <div class="w-12 h-12 sm:w-14 sm:h-14 bg-white/20 rounded-full flex items-center justify-center text-lg sm:text-xl font-bold flex-shrink-0">JD</div>
                <div class="min-w-0">
                  <div class="font-semibold truncate">Jennifer Davis</div>
                  <div class="text-blue-200 text-sm truncate">Project Manager, 8 years</div>
                </div>
              </div>
              <p class="text-blue-100 text-xs sm:text-sm line-clamp-3">"Jennifer's leadership on the downtown renovation project exemplifies our commitment to excellence."</p>
            </div>

            <!-- Open Positions -->
            <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-4 sm:p-5">
              <div class="flex items-center justify-between mb-3">
                <h2 class="font-semibold text-slate-900">We're Hiring!</h2>
                <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">3 Open</span>
              </div>
              <div class="space-y-1 sm:space-y-2 text-sm">
                <a href="/jewett-junction/careers/modern" class="block p-2 hover:bg-slate-50 rounded-lg transition-colors">
                  <div class="font-medium text-slate-900">Project Manager</div>
                  <div class="text-slate-500 text-xs sm:text-sm">Denver, CO</div>
                </a>
                <a href="/jewett-junction/careers/modern" class="block p-2 hover:bg-slate-50 rounded-lg transition-colors">
                  <div class="font-medium text-slate-900">Safety Coordinator</div>
                  <div class="text-slate-500 text-xs sm:text-sm">Boulder, CO</div>
                </a>
                <a href="/jewett-junction/careers/modern" class="block p-2 hover:bg-slate-50 rounded-lg transition-colors">
                  <div class="font-medium text-slate-900">Equipment Operator</div>
                  <div class="text-slate-500 text-xs sm:text-sm">Fort Collins, CO</div>
                </a>
              </div>
              <div class="mt-3 pt-3 border-t border-slate-100">
                <div class="text-xs text-slate-500">Know someone great? <a href="/jewett-junction/careers/modern" class="text-blue-600 font-medium">Referral bonus: $500</a></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <ThemeSwitcher client:load currentTheme="modern" />
  </body>
</html>
