---
import '../../../../generated/fonts.css';
import '../../../../generated/webflow.css';
import '../../../site-components/global.css';
import '../../../styles/global.css';
import { ThemeSwitcher } from '../../../components/ThemeSwitcher';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Classic Dashboard | Jewett Junction</title>
  </head>
  <body class="bg-slate-100 min-h-screen">
    <!-- Top Header -->
    <header class="bg-white h-16 fixed top-0 left-0 right-0 z-50 border-b border-slate-200">
      <div class="h-full flex items-center justify-between px-6">
        <div class="flex items-center gap-6">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-blue-900 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
            </div>
            <div>
              <span class="font-bold text-lg text-slate-900">Jewett Junction</span>
              <span class="text-slate-400 text-sm ml-2">Employee Portal</span>
            </div>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="relative">
            <input type="text" placeholder="Search resources..." class="w-64 px-4 py-2 bg-slate-100 border-0 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" />
            <svg class="w-4 h-4 text-slate-400 absolute right-3 top-1/2 -translate-y-1/2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
          </div>
          <button class="p-2 hover:bg-slate-100 rounded-lg relative">
            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
            <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full"></span>
          </button>
          <div class="flex items-center gap-3 pl-3 border-l border-slate-200">
            <span class="text-sm font-medium text-slate-700">Jewett Construction</span>
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-full flex items-center justify-center text-white font-medium">JC</div>
          </div>
        </div>
      </div>
    </header>

    <!-- Sidebar -->
    <aside class="fixed left-0 top-16 bottom-0 w-64 bg-white border-r border-slate-200 z-40 hidden md:flex flex-col">
      <div class="p-5 flex-1">
        <!-- Company Safety Card -->
        <div class="bg-gradient-to-br from-blue-900 to-blue-800 rounded-xl p-4 mb-6 text-white">
          <div class="flex items-center justify-between mb-3">
            <span class="text-blue-200 text-sm">Safety Record</span>
            <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
          <div class="text-3xl font-bold mb-1">247</div>
          <div class="text-sm text-blue-200">Days Without Incident</div>
          <div class="mt-3 text-xs text-blue-300">4EverSafe Commitment</div>
        </div>

        <nav class="space-y-1">
          <a href="/jewett-junction/dashboard/classic" class="flex items-center gap-3 px-4 py-3 bg-blue-50 text-blue-900 rounded-xl font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/></svg>
            Dashboard
          </a>
          <a href="/jewett-junction/safety/classic" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
            Safety Hub
          </a>
          <a href="/jewett-junction/hr/classic" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
            HR & Benefits
          </a>
          <a href="/jewett-junction/events/classic" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
            Calendar
          </a>
          <a href="/jewett-junction/it-helpdesk/classic" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            IT Support
          </a>
          <a href="/jewett-junction/careers/classic" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            Careers
          </a>
          <a href="/directory" class="flex items-center gap-3 px-4 py-3 text-slate-600 hover:bg-slate-50 rounded-xl">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
            Directory
          </a>
        </nav>
      </div>

      <!-- Contact Info -->
      <div class="p-5 border-t border-slate-200">
        <div class="text-xs text-slate-500 uppercase tracking-wider mb-3">Need Help?</div>
        <div class="space-y-2 text-sm">
          <a href="mailto:hr@jewettconstruction.com" class="flex items-center gap-2 text-slate-600 hover:text-blue-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            HR@jewett.com
          </a>
          <a href="/jewett-junction/it-helpdesk/classic" class="flex items-center gap-2 text-slate-600 hover:text-blue-600">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
            IT Ext. 5555
          </a>
        </div>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="pt-16 md:pl-64 min-h-screen">
      <div class="p-6 md:p-8 lg:p-10">
        <!-- Back Link -->
        <a href="/preview" class="inline-flex items-center gap-2 text-sm text-slate-500 hover:text-slate-700 mb-6 group">
          <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Style Selector
        </a>

        <!-- Welcome Section -->
        <div class="mb-8">
          <h1 class="text-3xl font-bold text-slate-900 mb-2">Welcome to Jewett Junction</h1>
          <p class="text-slate-600">Your central hub for company news, resources, and updates. Tuesday, January 14th, 2025.</p>
        </div>

        <!-- Featured Announcement Banner -->
        <div class="bg-gradient-to-r from-blue-900 to-blue-800 rounded-2xl p-6 mb-8 text-white">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-700/50 rounded text-xs font-medium mb-3">
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/></svg>
                Featured Announcement
              </span>
              <h2 class="text-2xl font-bold mb-2">Q4 2024 Results Are In!</h2>
              <p class="text-blue-100 mb-4 max-w-2xl">We exceeded our safety and revenue targets this quarter. Join us for the all-hands meeting on Wednesday to celebrate our achievements and hear about plans for 2025.</p>
              <div class="flex items-center gap-4">
                <a href="/jewett-junction/resources/classic" class="inline-flex items-center gap-2 px-4 py-2 bg-white text-blue-900 rounded-lg text-sm font-medium hover:bg-blue-50 transition-colors">
                  Read Full Announcement
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                </a>
                <span class="text-blue-200 text-sm">Posted by CEO Office • 2 hours ago</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Stats Bento Grid -->
        <div class="grid grid-cols-12 gap-4 mb-8">
          <!-- Safety Days - Large -->
          <div class="col-span-12 md:col-span-4 bg-white rounded-2xl p-6 border border-slate-200 shadow-sm">
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <span class="px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">Excellent</span>
            </div>
            <div class="text-5xl font-bold text-slate-900 mb-1">247</div>
            <div class="text-slate-600">Days Without Incident</div>
            <div class="mt-4 text-xs text-green-600 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
              Company best: 312 days
            </div>
          </div>

          <!-- Small Stats Grid -->
          <div class="col-span-12 md:col-span-8 grid grid-cols-2 lg:grid-cols-3 gap-4">
            <div class="bg-white rounded-xl p-5 border border-slate-200 shadow-sm">
              <div class="text-sm text-slate-500 mb-2">Active Projects</div>
              <div class="text-3xl font-bold text-slate-900">42</div>
              <div class="text-xs text-green-600 mt-1">+3 this month</div>
            </div>
            <div class="bg-white rounded-xl p-5 border border-slate-200 shadow-sm">
              <div class="text-sm text-slate-500 mb-2">Total Employees</div>
              <div class="text-3xl font-bold text-slate-900">156</div>
              <div class="text-xs text-slate-500 mt-1">Across 5 locations</div>
            </div>
            <div class="bg-white rounded-xl p-5 border border-slate-200 shadow-sm">
              <div class="text-sm text-slate-500 mb-2">Open Positions</div>
              <div class="text-3xl font-bold text-blue-600">8</div>
              <div class="text-xs text-blue-600 mt-1">View openings →</div>
            </div>
            <div class="bg-white rounded-xl p-5 border border-slate-200 shadow-sm lg:col-span-2">
              <div class="text-sm text-slate-500 mb-2">Safety Training Compliance</div>
              <div class="flex items-end gap-3">
                <div class="text-3xl font-bold text-slate-900">94%</div>
                <div class="flex-1 h-2 bg-slate-100 rounded-full overflow-hidden">
                  <div class="h-full w-[94%] bg-green-600 rounded-full"></div>
                </div>
              </div>
              <div class="text-xs text-slate-500 mt-2">147 of 156 employees current</div>
            </div>
            <div class="bg-blue-900 rounded-xl p-5 text-white">
              <div class="text-sm text-blue-200 mb-2">Referral Bonus</div>
              <div class="text-3xl font-bold">$500</div>
              <div class="text-xs text-blue-200 mt-1">Per successful hire</div>
            </div>
          </div>
        </div>

        <!-- Quick Links -->
        <div class="mb-8">
          <h2 class="text-sm font-medium text-slate-500 uppercase tracking-wider mb-3">Quick Links</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3">
            <a href="/jewett-junction/safety/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">Safety</div>
            </a>
            <a href="/jewett-junction/hr/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">HR</div>
            </a>
            <a href="/jewett-junction/it-helpdesk/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">IT Help</div>
            </a>
            <a href="/jewett-junction/resources/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">Training</div>
            </a>
            <a href="/jewett-junction/careers/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-amber-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">Careers</div>
            </a>
            <a href="/jewett-junction/events/classic" class="bg-white rounded-xl p-4 border border-slate-200 shadow-sm hover:shadow-md hover:border-slate-300 transition-all group text-center">
              <div class="w-10 h-10 bg-slate-100 rounded-lg flex items-center justify-center mb-3 mx-auto group-hover:scale-110 transition-transform">
                <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
              </div>
              <div class="font-medium text-slate-900 text-sm">Calendar</div>
            </a>
          </div>
        </div>

        <!-- Three Column Layout -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
          <!-- News Feed -->
          <div class="lg:col-span-2 bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden">
            <div class="p-5 border-b border-slate-100 flex items-center justify-between">
              <h2 class="font-semibold text-slate-900">News & Updates</h2>
              <a href="/jewett-junction/resources/classic" class="text-sm text-blue-600 hover:text-blue-700">View All</a>
            </div>
            <div class="divide-y divide-slate-100">
              <div class="p-4 flex items-start gap-4 hover:bg-slate-50 transition-colors">
                <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/></svg>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-1">
