---
import DashboardLayout from '../layouts/dashboard.astro';
import { Card, CardContent } from '../components/ui/card';
import { Button } from '../components/ui/button';
import { Home, Search, ArrowLeft, HelpCircle } from 'lucide-react';
---

<DashboardLayout title="Page Not Found | Jewett Junction">
  <div class="flex items-center justify-center min-h-[60vh]">
    <Card className="max-w-lg w-full text-center">
      <CardContent className="pt-12 pb-8 px-8">
        <div class="w-24 h-24 bg-primary/10 rounded-full mx-auto mb-6 flex items-center justify-center">
          <span class="text-5xl font-bold text-primary">404</span>
        </div>

        <h1 class="text-2xl font-bold mb-2">Page Not Found</h1>
        <p class="text-muted-foreground mb-8">
          Sorry, we couldn't find the page you're looking for. It might have been moved or doesn't exist.
        </p>

        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a href="/jewett-junction/dashboard/modern">
            <Button className="w-full sm:w-auto">
              <Home className="mr-2 h-4 w-4" />
              Go to Dashboard
            </Button>
          </a>
          <a href="/jewett-junction/resources/modern">
            <Button variant="outline" className="w-full sm:w-auto">
              <Search className="mr-2 h-4 w-4" />
              Browse Resources
            </Button>
          </a>
        </div>

        <div class="mt-8 pt-6 border-t">
          <p class="text-sm text-muted-foreground mb-4">
            Need help? Try one of these:
          </p>
          <div class="flex flex-wrap justify-center gap-4 text-sm">
            <a href="/jewett-junction/it-helpdesk/modern" class="text-primary hover:underline flex items-center gap-1">
              <HelpCircle className="h-4 w-4" />
              IT Helpdesk
            </a>
            <a href="/jewett-junction/directory/modern" class="text-primary hover:underline">
              Employee Directory
            </a>
            <a href="/jewett-junction/hr/modern" class="text-primary hover:underline">
              HR Resources
            </a>
          </div>
        </div>
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
