      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>
    <span id="toast-message">Settings saved</span>
  </div>

  <script>
    // Settings keys for localStorage
    const SETTINGS_KEY = 'jewett_junction_settings';

    // Default settings
    const defaultSettings = {
      notifications: {
        announcements: true,
        safetyAlerts: true,
        hrUpdates: true,
        eventReminders: false,
        jobPostings: false
      },
      profile: {
        displayName: 'Jewett Construction',
        department: 'Administration'
      }
    };

    // Load settings from localStorage
    function loadSettings() {
      try {
        const stored = localStorage.getItem(SETTINGS_KEY);
        return stored ? { ...defaultSettings, ...JSON.parse(stored) } : defaultSettings;
      } catch {
        return defaultSettings;
      }
    }

    // Save settings to localStorage
    function saveSettings(settings: typeof defaultSettings) {
      try {
        localStorage.setItem(SETTINGS_KEY, JSON.stringify(settings));
        showToast('Settings saved');
      } catch (error) {
        showToast('Failed to save settings', true);
      }
    }

    // Show toast notification
    function showToast(message: string, isError = false) {
      const toast = document.getElementById('toast');
      const toastMessage = document.getElementById('toast-message');
      if (!toast || !toastMessage) return;

      toastMessage.textContent = message;
      toast.className = toast.className.replace('bg-emerald-600', isError ? 'bg-red-600' : 'bg-emerald-600');
      toast.classList.remove('translate-y-20', 'opacity-0');

      setTimeout(() => {
        toast.classList.add('translate-y-20', 'opacity-0');
      }, 2500);
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', () => {
      const settings = loadSettings();

      // Get all toggle checkboxes
      const toggles = document.querySelectorAll<HTMLInputElement>('input[type="checkbox"]');
      const notificationKeys = ['announcements', 'safetyAlerts', 'hrUpdates', 'eventReminders', 'jobPostings'];

      // Set initial toggle states
      toggles.forEach((toggle, index) => {
        if (index < notificationKeys.length) {
          const key = notificationKeys[index] as keyof typeof settings.notifications;
          toggle.checked = settings.notifications[key];
        }
      });

      // Add change listeners to toggles
      toggles.forEach((toggle, index) => {
        toggle.addEventListener('change', () => {
          if (index < notificationKeys.length) {
            const key = notificationKeys[index] as keyof typeof settings.notifications;
            settings.notifications[key] = toggle.checked;
            saveSettings(settings);
          }
        });
      });

      // Profile inputs
      const displayNameInput = document.querySelector<HTMLInputElement>('input[value="Jewett Construction"]');
      const departmentInput = document.querySelector<HTMLInputElement>('input[value="Administration"]');

      if (displayNameInput) {
        displayNameInput.value = settings.profile.displayName;
        displayNameInput.addEventListener('change', () => {
          settings.profile.displayName = displayNameInput.value;
          saveSettings(settings);
        });
      }

      if (departmentInput) {
        departmentInput.value = settings.profile.department;
        departmentInput.addEventListener('change', () => {
          settings.profile.department = departmentInput.value;
          saveSettings(settings);
        });
      }
    });
  </script>
