---
import DashboardLayout from '../../../layouts/dashboard.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../../components/ui/card';
import { Button } from '../../../components/ui/button';
import { Badge } from '../../../components/ui/badge';
import { Presentation, Download, ArrowLeft, Monitor, Users, Building2, Award } from 'lucide-react';
---

<DashboardLayout title="Presentations | Jewett Junction">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-muted-foreground hover:text-foreground transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3">
          <Presentation className="h-7 w-7 text-green-500" />
          Presentation Templates
        </h1>
        <p class="text-muted-foreground mt-1">
          PowerPoint templates and pitch decks
        </p>
      </div>
    </div>

    <!-- Featured Templates -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <Card className="border-2 border-primary/20">
        <CardHeader>
          <div class="flex items-center justify-between">
            <Badge>Most Popular</Badge>
            <Monitor className="h-5 w-5 text-muted-foreground" />
          </div>
          <CardTitle className="mt-2">Corporate Presentation</CardTitle>
          <CardDescription>Standard template for company presentations</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="h-40 bg-gradient-to-br from-blue-600 to-blue-800 rounded-lg mb-4 flex items-center justify-center">
            <div class="text-white text-center">
              <div class="text-3xl font-bold">JC</div>
              <div class="text-sm opacity-80">Jewett Construction</div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-muted-foreground">25 slides • 16:9</span>
            <div class="flex gap-2">
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> PPTX
              </Button>
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> Google
              </Button>
            </div>
          </div>
        </CardContent>
      </Card>

      <Card>
        <CardHeader>
          <div class="flex items-center justify-between">
            <Badge variant="secondary">Client Facing</Badge>
            <Users className="h-5 w-5 text-muted-foreground" />
          </div>
          <CardTitle className="mt-2">Project Proposal</CardTitle>
          <CardDescription>For client pitches and proposals</CardDescription>
        </CardHeader>
        <CardContent>
          <div class="h-40 bg-gradient-to-br from-slate-700 to-slate-900 rounded-lg mb-4 flex items-center justify-center">
            <div class="text-white text-center">
              <div class="text-xl font-semibold">Project Proposal</div>
              <div class="text-sm opacity-60 mt-1">Your Project Name</div>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-muted-foreground">18 slides • 16:9</span>
            <div class="flex gap-2">
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> PPTX
              </Button>
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> Google
              </Button>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>

    <!-- Additional Templates -->
    <Card>
      <CardHeader>
        <CardTitle>All Templates</CardTitle>
        <CardDescription>Browse our complete collection of presentation templates</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="space-y-3">
          <div class="flex items-center justify-between p-3 bg-muted rounded-lg hover:bg-muted/80 transition-colors">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 bg-blue-100 rounded flex items-center justify-center">
                <Building2 className="h-5 w-5 text-blue-600" />
              </div>
              <div>
                <p class="font-medium text-sm">Company Overview</p>
                <p class="text-xs text-muted-foreground">General company introduction • 15 slides</p>
              </div>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-1" /> Download
            </Button>
          </div>

          <div class="flex items-center justify-between p-3 bg-muted rounded-lg hover:bg-muted/80 transition-colors">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 bg-orange-100 rounded flex items-center justify-center">
                <Award className="h-5 w-5 text-orange-600" />
              </div>
              <div>
                <p class="font-medium text-sm">Safety Training</p>
                <p class="text-xs text-muted-foreground">4EverSafe program materials • 30 slides</p>
              </div>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-1" /> Download
            </Button>
          </div>

          <div class="flex items-center justify-between p-3 bg-muted rounded-lg hover:bg-muted/80 transition-colors">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 bg-green-100 rounded flex items-center justify-center">
                <Users className="h-5 w-5 text-green-600" />
              </div>
              <div>
                <p class="font-medium text-sm">New Hire Orientation</p>
                <p class="text-xs text-muted-foreground">Onboarding presentation • 40 slides</p>
              </div>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-1" /> Download
            </Button>
          </div>

          <div class="flex items-center justify-between p-3 bg-muted rounded-lg hover:bg-muted/80 transition-colors">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 bg-purple-100 rounded flex items-center justify-center">
                <Presentation className="h-5 w-5 text-purple-600" />
              </div>
              <div>
                <p class="font-medium text-sm">Quarterly Review</p>
                <p class="text-xs text-muted-foreground">Performance and metrics template • 20 slides</p>
              </div>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-1" /> Download
            </Button>
          </div>

          <div class="flex items-center justify-between p-3 bg-muted rounded-lg hover:bg-muted/80 transition-colors">
            <div class="flex items-center gap-3">
              <div class="h-10 w-10 bg-red-100 rounded flex items-center justify-center">
                <Monitor className="h-5 w-5 text-red-600" />
              </div>
              <div>
                <p class="font-medium text-sm">Project Closeout</p>
                <p class="text-xs text-muted-foreground">Final project presentation • 12 slides</p>
              </div>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-1" /> Download
            </Button>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Tips -->
    <Card className="bg-blue-50 border-blue-200">
      <CardContent className="pt-6">
        <h3 class="font-semibold text-blue-900 mb-2">Presentation Tips</h3>
        <ul class="text-sm text-blue-800 space-y-1">
          <li>• Always use the latest template version for brand consistency</li>
          <li>• Keep text minimal - use bullet points and visuals</li>
          <li>• Include project photos when presenting to clients</li>
          <li>• Contact Marketing for custom template requests</li>
        </ul>
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
