---
import DashboardLayout from '../../../layouts/dashboard.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../../components/ui/card';
import { Button } from '../../../components/ui/button';
import { Badge } from '../../../components/ui/badge';
import { PenTool, ArrowLeft, MapPin, Building, Car, Flag, Send, Clock, CheckCircle } from 'lucide-react';
---

<DashboardLayout title="Signage Request | Jewett Junction">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-muted-foreground hover:text-foreground transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3">
          <PenTool className="h-7 w-7 text-orange-500" />
          Signage Request
        </h1>
        <p class="text-muted-foreground mt-1">
          Request job site and office signage
        </p>
      </div>
    </div>

    <!-- Request Form -->
    <Card>
      <CardHeader>
        <CardTitle>New Signage Request</CardTitle>
        <CardDescription>Fill out the form below to request new signage</CardDescription>
      </CardHeader>
      <CardContent>
        <form class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium">Requester Name</label>
              <input type="text" class="w-full px-3 py-2 border rounded-md text-sm" placeholder="Your name" />
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium">Department</label>
              <select class="w-full px-3 py-2 border rounded-md text-sm">
                <option>Select department...</option>
                <option>Project Management</option>
                <option>Field Operations</option>
                <option>Safety</option>
                <option>HR</option>
                <option>Executive</option>
              </select>
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium">Signage Type</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
              <label class="flex items-center gap-2 p-3 border rounded-lg cursor-pointer hover:bg-muted">
                <input type="radio" name="type" class="accent-primary" />
                <MapPin className="h-4 w-4 text-muted-foreground" />
                <span class="text-sm">Job Site</span>
              </label>
              <label class="flex items-center gap-2 p-3 border rounded-lg cursor-pointer hover:bg-muted">
                <input type="radio" name="type" class="accent-primary" />
                <Building className="h-4 w-4 text-muted-foreground" />
                <span class="text-sm">Office</span>
              </label>
              <label class="flex items-center gap-2 p-3 border rounded-lg cursor-pointer hover:bg-muted">
                <input type="radio" name="type" class="accent-primary" />
                <Car className="h-4 w-4 text-muted-foreground" />
                <span class="text-sm">Vehicle</span>
              </label>
              <label class="flex items-center gap-2 p-3 border rounded-lg cursor-pointer hover:bg-muted">
                <input type="radio" name="type" class="accent-primary" />
                <Flag className="h-4 w-4 text-muted-foreground" />
                <span class="text-sm">Event</span>
              </label>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label class="text-sm font-medium">Project/Location Name</label>
              <input type="text" class="w-full px-3 py-2 border rounded-md text-sm" placeholder="e.g., Downtown Office Tower" />
            </div>
            <div class="space-y-2">
              <label class="text-sm font-medium">Needed By Date</label>
              <input type="date" class="w-full px-3 py-2 border rounded-md text-sm" />
            </div>
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium">Delivery Address</label>
            <input type="text" class="w-full px-3 py-2 border rounded-md text-sm" placeholder="Full address for delivery" />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium">Quantity</label>
            <input type="number" class="w-full px-3 py-2 border rounded-md text-sm" placeholder="1" min="1" />
          </div>

          <div class="space-y-2">
            <label class="text-sm font-medium">Special Instructions</label>
            <textarea class="w-full px-3 py-2 border rounded-md text-sm" rows="3" placeholder="Any specific requirements, dimensions, or additional details..."></textarea>
          </div>

          <Button type="submit" className="w-full md:w-auto">
            <Send className="h-4 w-4 mr-2" /> Submit Request
          </Button>
        </form>
      </CardContent>
    </Card>

    <!-- Available Signage Types -->
    <Card>
      <CardHeader>
        <CardTitle>Standard Signage Options</CardTitle>
        <CardDescription>Pre-approved signage types available for request</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="border rounded-lg p-4">
            <div class="h-24 bg-blue-600 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center">
                <div class="text-lg font-bold">JEWETT</div>
                <div class="text-xs">CONSTRUCTION</div>
              </div>
            </div>
            <p class="font-medium text-sm">Job Site Banner</p>
            <p class="text-xs text-muted-foreground">4' x 8' outdoor banner</p>
          </div>

          <div class="border rounded-lg p-4">
            <div class="h-24 bg-orange-500 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center text-sm font-bold">
                ⚠️ SAFETY FIRST
              </div>
            </div>
            <p class="font-medium text-sm">Safety Sign</p>
            <p class="text-xs text-muted-foreground">24" x 36" safety signage</p>
          </div>

          <div class="border rounded-lg p-4">
            <div class="h-24 bg-slate-800 rounded flex items-center justify-center mb-3">
              <div class="text-white text-center">
                <div class="text-sm font-bold">PROJECT NAME</div>
                <div class="text-xs opacity-60">Jewett Construction</div>
              </div>
            </div>
            <p class="font-medium text-sm">Project Sign</p>
            <p class="text-xs text-muted-foreground">3' x 4' project identifier</p>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Processing Timeline -->
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center gap-2">
          <Clock className="h-5 w-5" />
          Processing Timeline
        </CardTitle>
      </CardHeader>
      <CardContent>
        <div class="flex flex-col md:flex-row gap-4">
          <div class="flex-1 flex items-center gap-3 p-3 bg-muted rounded-lg">
            <div class="h-8 w-8 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-blue-600 font-bold text-sm">1</span>
            </div>
            <div>
              <p class="font-medium text-sm">Request Review</p>
              <p class="text-xs text-muted-foreground">1-2 business days</p>
            </div>
          </div>
          <div class="flex-1 flex items-center gap-3 p-3 bg-muted rounded-lg">
            <div class="h-8 w-8 bg-orange-100 rounded-full flex items-center justify-center">
              <span class="text-orange-600 font-bold text-sm">2</span>
            </div>
            <div>
              <p class="font-medium text-sm">Production</p>
              <p class="text-xs text-muted-foreground">3-5 business days</p>
            </div>
          </div>
          <div class="flex-1 flex items-center gap-3 p-3 bg-muted rounded-lg">
            <div class="h-8 w-8 bg-green-100 rounded-full flex items-center justify-center">
              <CheckCircle className="h-4 w-4 text-green-600" />
            </div>
            <div>
              <p class="font-medium text-sm">Delivery</p>
              <p class="text-xs text-muted-foreground">1-3 business days</p>
            </div>
          </div>
        </div>
        <p class="text-xs text-muted-foreground mt-4">
          Rush orders may be available. Contact Marketing directly for urgent requests.
        </p>
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
