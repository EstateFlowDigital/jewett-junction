---
import DashboardLayout from '../../../layouts/dashboard.astro';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../../../components/ui/card';
import { Button } from '../../../components/ui/button';
import { Badge } from '../../../components/ui/badge';
import { Image, Download, Palette, FileType, ArrowLeft, Copy, Check } from 'lucide-react';
---

<DashboardLayout title="Brand Assets | Jewett Junction">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/jewett-junction/marketing" class="text-muted-foreground hover:text-foreground transition-colors">
        <ArrowLeft className="h-5 w-5" />
      </a>
      <div>
        <h1 class="text-2xl font-bold tracking-tight flex items-center gap-3">
          <Image className="h-7 w-7 text-primary" />
          Brand Assets
        </h1>
        <p class="text-muted-foreground mt-1">
          Official logos, colors, and brand guidelines
        </p>
      </div>
    </div>

    <!-- Logo Downloads -->
    <Card>
      <CardHeader>
        <CardTitle>Company Logos</CardTitle>
        <CardDescription>Download official Jewett Construction logos in various formats</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <div class="border rounded-lg p-4 text-center">
            <div class="h-24 bg-slate-100 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-blue-600">JC</div>
            </div>
            <p class="font-medium text-sm">Primary Logo</p>
            <p class="text-xs text-muted-foreground mb-3">Full color, horizontal</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>

          <div class="border rounded-lg p-4 text-center">
            <div class="h-24 bg-slate-800 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-white">JC</div>
            </div>
            <p class="font-medium text-sm">White Logo</p>
            <p class="text-xs text-muted-foreground mb-3">For dark backgrounds</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>

          <div class="border rounded-lg p-4 text-center">
            <div class="h-24 bg-slate-100 rounded flex items-center justify-center mb-3">
              <div class="text-2xl font-bold text-slate-800">JC</div>
            </div>
            <p class="font-medium text-sm">Black Logo</p>
            <p class="text-xs text-muted-foreground mb-3">Single color version</p>
            <div class="flex gap-2 justify-center">
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> PNG
              </Button>
              <Button size="sm" variant="outline">
                <Download className="h-3 w-3 mr-1" /> SVG
              </Button>
            </div>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Brand Colors -->
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center gap-2">
          <Palette className="h-5 w-5" />
          Brand Colors
        </CardTitle>
        <CardDescription>Official color palette for all marketing materials</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-blue-600"></div>
            <p class="font-medium text-sm">Jewett Blue</p>
            <p class="text-xs text-muted-foreground font-mono">#2563EB</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-slate-800"></div>
            <p class="font-medium text-sm">Slate Dark</p>
            <p class="text-xs text-muted-foreground font-mono">#1E293B</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-orange-500"></div>
            <p class="font-medium text-sm">Safety Orange</p>
            <p class="text-xs text-muted-foreground font-mono">#F97316</p>
          </div>
          <div class="space-y-2">
            <div class="h-20 rounded-lg bg-green-600"></div>
            <p class="font-medium text-sm">Success Green</p>
            <p class="text-xs text-muted-foreground font-mono">#16A34A</p>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Typography -->
    <Card>
      <CardHeader>
        <CardTitle className="flex items-center gap-2">
          <FileType className="h-5 w-5" />
          Typography
        </CardTitle>
        <CardDescription>Approved fonts for digital and print materials</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-3">
            <h4 class="font-semibold">Primary: Inter</h4>
            <p class="text-muted-foreground text-sm">Used for headlines, titles, and emphasis</p>
            <div class="space-y-1">
              <p class="text-2xl font-bold">Aa Bb Cc 123</p>
              <p class="text-lg font-semibold">The quick brown fox</p>
            </div>
            <Button size="sm" variant="outline">
              <Download className="h-3 w-3 mr-2" /> Download Font
            </Button>
          </div>
          <div class="space-y-3">
            <h4 class="font-semibold">Secondary: System UI</h4>
            <p class="text-muted-foreground text-sm">Used for body text and UI elements</p>
            <div class="space-y-1 font-sans">
              <p class="text-2xl">Aa Bb Cc 123</p>
              <p class="text-lg">The quick brown fox</p>
            </div>
            <Badge variant="secondary">System Default</Badge>
          </div>
        </div>
      </CardContent>
    </Card>

    <!-- Brand Guidelines -->
    <Card>
      <CardHeader>
        <CardTitle>Brand Guidelines PDF</CardTitle>
        <CardDescription>Complete brand standards and usage guidelines</CardDescription>
      </CardHeader>
      <CardContent>
        <div class="flex items-center justify-between p-4 bg-muted rounded-lg">
          <div class="flex items-center gap-4">
            <div class="h-12 w-12 bg-red-100 rounded flex items-center justify-center">
              <FileType className="h-6 w-6 text-red-600" />
            </div>
            <div>
              <p class="font-medium">Jewett_Brand_Guidelines_2024.pdf</p>
              <p class="text-sm text-muted-foreground">2.4 MB â€¢ Last updated Jan 2024</p>
            </div>
          </div>
          <Button>
            <Download className="h-4 w-4 mr-2" /> Download PDF
          </Button>
        </div>
      </CardContent>
    </Card>
  </div>
</DashboardLayout>
